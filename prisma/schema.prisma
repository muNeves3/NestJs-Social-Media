// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  email    String @unique
  password String
  username String @unique

  createdAt      DateTime  @default(now())
  deactivateDate DateTime?

  @@map("user")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  text        String
  userId      Int
  publishedAt DateTime @default(now())

  @@map("post")
}

model Like {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int?
  commentId Int?
  createdAt DateTime @default(now())

  @@map("likes")
}

model Comment {
  id          Int      @id @default(autoincrement())
  text        String
  postId      Int
  userId      Int
  publishedAt DateTime @default(now())

  @@map("comment")
}

model Follower {
  id         Int      @id @default(autoincrement())
  userId     Int
  followerId Int
  createdAt  DateTime @default(now())

  @@map("follower")
}
